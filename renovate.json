{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "kubernetes": {
    "fileMatch": [
      "\\.yaml$",
      "\\.yml$"
    ],
    "ignorePaths": [
      "**/*-helm.yaml",
      "**/*-helm.yml"
    ]
  },
  "helm-values": {
    "fileMatch": [".*-helm\\.yaml$", ".*-helm\\.yml$"]
  }
}
